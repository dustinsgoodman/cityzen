<h1>Listing legislations</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Num for votes</th>
    <th>Num no votes</th>
    <th>Sponsor</th>
    <th>Date</th>
    <th>Passed?</th>
    <th>Affected location</th>
    <th>Ordinance</th>
    <th>Legislation type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @legislations.each do |legislation| %>
  <tr>
    <td><%= legislation.title %></td>
    <td><%= legislation.content %></td>
    <td><%= legislation.num_for_votes %></td>
    <td><%= legislation.num_no_votes %></td>
    <td><%= legislation.sponsor %></td>
    <td><%= legislation.date %></td>
    <td><%= legislation.passed? %></td>
    <td><%= legislation.affected_location %></td>
    <td><%= legislation.ordinance_id %></td>
    <td><%= legislation.legislation_type %></td>
    <td><%= link_to 'Show', legislation %></td>
    <td><%= link_to 'Edit', edit_legislation_path(legislation) %></td>
    <td><%= link_to 'Destroy', legislation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

